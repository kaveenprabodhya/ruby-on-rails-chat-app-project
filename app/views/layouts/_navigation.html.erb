<div class="ui small inverted menu">
  <div class="ui container">
    <%= link_to "Home", root_path, class: "item" %>
    <a class="item">
      Messages
    </a>
    <div class="right menu">
      <div class="ui dropdown item">
        Account <i class="dropdown icon"></i>
        <div class="menu">
          <% if logged_in?  %>
            <%= link_to "Logout", logout_path, class: "item", data:{ turbo_method: :delete }
          %>
          <% else %>
            <%= link_to "Login", login_path, class: "item" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
