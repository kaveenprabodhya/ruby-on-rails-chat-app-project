<%= form_with url: login_path, scope: :session do |form| %>
  <div class="field">
    <%= form.label :username, style: "display: block" %>
    <div class="ui left icon input">
      <%= form.text_field :username %>
      <i class="user icon"></i>
    </div>
  </div>
  <div class="field">
    <%= form.label :password, style: "display: block" %>
    <div class="ui left icon input">
      <%= form.password_field :password %>
      <i class="lock icon"></i>
    </div>
  </div>
  <%= form.submit "Signin", class: "ui green submit button" %>
<% end %>
